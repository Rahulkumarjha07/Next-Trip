<% layout("layouts/boilerplate") %>

<h3>All Listings</h3>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for (let listing of allistings) { %>
    <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: black;">
<div class="card  col" >
  <img src="<%= listing.image.url %>" class="card-img-top" alt="...">

  <div class="card-body">
    <b><p class="card-text"><%= listing.title %></p></b>
    <br>
    <strong>Price:</strong> $<%= listing.price %>
    <br>
    <strong>Location:</strong> <%= listing.location %>
    <br>
    <strong>Country:</strong> <%= listing.country %>
  </p>
  </div>
</div>
 <% } %>
</div>

<form method="get" action="/listings/new">
  <button type="submit">New Listing</button>
</form>
 