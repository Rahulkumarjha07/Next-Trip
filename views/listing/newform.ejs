<% layout("layouts/boilerplate") %>

  <h3>Create New Listing</h3>

  <form method="post" action="/listings">

    <label for="title">Title:</label>
    <input type="text" id="title" name="listing[title]" required>
    <br><br>

    <label for="description">Description:</label>
    <textarea id="description" name="listing[description]" required></textarea>
    <br><br>

    <label for="price">Price:</label>
    <input type="number" id="price" name="listing[price]" required>
    <br><br>

    <label for="image">Image URL:</label>
    <input type="text" id="image" name="listing[image][url]" required>
    <br><br>

    <label for="location">Location:</label>
    <input type="text" id="location" name="listing[location]" required>
    <br><br>

    <label for="country">Country:</label>
    <input type="text" id="country" name="listing[country]" required>
    <br><br>

    <button type="submit">Create Listing</button>

  </form>


